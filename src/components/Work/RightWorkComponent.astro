---
interface Props {
    img: string
    title: string;
    date: string;
    desc: string;
    tags?: string;
  }

const { img, title, date, desc, tags="" } = Astro.props;
--- 

<div class="relative z-10 ">
    <img src={img} 
    alt=""
    class="hover:animate-spin h-24 w-24 object-cover rounded-full shadow-md border-4 border-white dark:border-[#28282c] xs:absolute md:mx-auto md:left-0 md:right-0"
    >
    <div class="relative pt-2 xs:pl-28 xs:pt-0 md:w-1/2 md:ml-auto md:pl-16">
        <div aria-hidden="true" class="absolute inset-0 left-10 h-4 w-4 transform rotate-45 bg-white dark:bg-[#28282c] xs:top-11 xs:left-26 md:left-14"></div>
        <div class=" bg-white hover:shadow-2xl transition duration-300 ease-in dark:bg-[#28282c] p-6 rounded-md shadow-md">
            <span class="font-bold text-orange-600 dark:text-indigo-500 text-sm tracking-wide">{date}</span>
            <h1 class="text-xl font-bold pt-1">{title}</h1>
        <p class="pt-2 text-justify">{desc}</p>
        <span class="font-light text-orange-600 dark:text-indigo-500 text-sm tracking-wide">{tags}</span>
        </div>
    </div>
</div>


---
interface Props {
  title: string;
}

const { title} = Astro.props;
---

<div class="flex flex-col m-auto p-auto">
    <div class="flex overflow-x-scroll pb-10 hide-scroll-bar">
      <div class="flex flex-nowrap lg:ml-52 md:ml-20 pt-10">
        <div class="inline-block px-3">
          <div class="w-64 h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-white dark:bg-[#28282c] hover:shadow-2xl transition duration-300 ease-in">
            <div class="p-6 font-bold text-orange-600 dark:text-indigo-500 text-xl tracking-wide">{title}</div>
          </div>
        </div>

        <slot/>

        </div>
      </div>
    </div>
</div>

<style>
  .hide-scroll-bar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .hide-scroll-bar::-webkit-scrollbar {
    display: none;
  }
  </style>
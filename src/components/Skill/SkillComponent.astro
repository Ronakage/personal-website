---
interface Props {
  img: string;
  title: string;
  size?: string;
  top?: string;
}

const { img , title, size="h-28 w-28", top="" } = Astro.props;
---


<div class="inline-block px-3">
    <div class="w-64 h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-white dark:bg-[#28282c] hover:shadow-2xl transition duration-300 ease-in">
      <div class="p-6 font-bold text-orange-600 dark:text-indigo-500 text-xl tracking-wide">{title}</div>
      <div class=`flex justify-center ${top}`>
          <img src={img} alt=""
          class=`${size} object-scale-down bg-transparent`>
        <ul class="list-disc pl-6">
          <slot />
        </ul>
      </div>
    </div>
  </div>